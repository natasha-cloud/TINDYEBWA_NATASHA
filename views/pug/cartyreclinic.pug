doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM', crossorigin='anonymous')
    link(rel='stylesheet', href='css/cartyreclinic.css')
    link(rel='icon' type='image/png' sizes='16x16' href='images/favicon.ico')
    title tyre clinic
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href='#')
          img(src='images/logo.png', alt='logo', height='50')
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            //
              <li class="nav-item">
              <a class="nav-link" href="index.html">Home</a>
              </li>
            li.nav-item.active
              a.nav-link(href='/dashboard') Back
        .right-side
          button.btn.btn-primary(onclick='logout()') Log Out
          .hamburger
            span
            span
            span
    .ct-wrapper
      h1 Car Tyre Clinic
      form(name='cartyreclinic' method='POST' action='/api/tyre' onSubmit='return Validate(event);')
        label(for='firstname')
          | Firstname:
          span#firstNameError.required-field *
        input#firstname(type='text', name='firstName')
        label(for='firstName')
          | Lastname:
          span#errorLastName.required-field *
        input#lastname(type='text', name='lastName')
        label(for='phone')
          | Phone Number:
          span#phoneError.required-field *
        input#phone(type='tel', name='phone', placeholder='+256')
        label(for='nin')
          | NIN:
          span#ninError.required-field *
        input#nin(type='text', name='nin')
        label(for='arrival-time')
          | Time (12-hour format):
          span.required-field *
        input#time(type='time', name='time')
        label(for='date')
          | Date:
          span.required-field *
        input#date(type='date', name='date', step='1', pattern='[0-9]{2}:[0-9]{2} [A-Za-z]{2}', required='')
        // numberplate
        label(for='numberPlate')
          | Number Plate:
          span.required-field *
        input#numberPlate(type='text', name='numberPlate')
        label(for='Model')
          | Car Model:
          span.required-field *
        input#modelType(type='text', name='modelType')
        label(for='tyre') Select Service:
        select#tyreService(name='tyreService', onchange='calculateAmount()')
          option(value='')
          option(value='tirePressure') Tire Pressure ugx500
          option(value='punctureFixing') Puncture Fixing ugx5000
          option(value='valves') Valves ugx5000
        button.btn.btn-primary.form-width(type='submit' name='submit') Submit
    footer
      | Copyright  &copy; Tindyebwa-2023.
    script(src='js/script.js')