doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM', crossorigin='anonymous')
    link(rel='stylesheet', href='css/bodaboda.css')
    link(rel='icon' type='image/png' sizes='16x16' href='images/favicon.ico')
    title bodaboda-form
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href='#')
          img(src='images/logo.png', alt='logo', height='50')
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            //
              <li class="nav-item">
              <a class="nav-link" href="index.html">Home</a>
              </li>
            li.nav-item.active
              a.nav-link(href='/services') Back
        .right-side
          button.btn.btn-primary(onclick='logout()') Log Out
          .hamburger
            span
            span
            span
    .ct-wrapper
      h1 BodaBoda
      form(name='bodaboda' method='POST' action='/api/bodaboda' onSubmit='return Validate(event);')
        label(for='firstname')
          | Firstname:
          span.required-field *
        input#firstname(type='text', name='firstname')
        label(for='firstname')
          | Lastname:
          span.required-field *
        input#lastname(type='text', name='lastname')
        label(for='phone')
          | Phone Number:
          span.required-field *
        input#phone(type='tel', name='phone', placeholder='+256')
        label(for='nin')
          | NIN:
          span.required-field *
        input#nin(type='text', name='nin')
        label(for='gender')
          | Gender:
          span.required-field *
        select#gender
          option(value='', disabled='', selected='')
          option(value='Male') Male
          option(value='Female') Female
          option(value='Other') Other
        // Time
        label(for='arrival-time')
          | Time (12-hour format):
          span.required-field *
        input#time(type='time', name='time')
        // Date
        label(for='date')
          | Date:
          span.required-field *
        input#date(type='date', name='date', step='1', pattern='[0-9]{2}:[0-9]{2} [A-Za-z]{2}', required='')
        // Number plate
        label(for='numberPlate')
          | Number Plate:
          span.required-field *
        input#numberPlate(type='text', name='numberPlate')
        label(for='Model')
          | Model:
          span.required-field *
        input#modelType(type='text', name='modelType')
        label(for='bodaboda') Select Duration:
        select#bodaboda(name='bodaboda', onchange='calculateAmount()')
          option(value='') Select Duration
          option(value='Day') Day ugx2000
          option(value='Night') Night ugx2000
          option(value='Less than 3hours 1000') Less than 3hours 1000
        button.btn.btn-primary.form-width(type='submit' name='submit') Submit
    footer
